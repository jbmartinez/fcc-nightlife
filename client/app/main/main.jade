.main
  .header(ng-class="{true: 'is-submitted', false: ''}[formSubmitted===true]")
    form(ng-submit="search()") I'm in 
      input(type="text", name="search", id="search" ng-model="location" autofocus)
  .results.ng-cloak
    .card(ng-repeat="venue in venues")
      img(ng-src="{{venue.photo}}")
      a(href="{{venue.link}}", target="_blank")
        h3 {{venue.name}}
      .count(ng-click="toggleCount($index)") going {{venue.who.length || 0}}

